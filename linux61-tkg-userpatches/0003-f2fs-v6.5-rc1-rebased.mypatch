index 075d5e3ed5ce..81b126b8b532 100644
--- a/fs/f2fs/file.c
+++ b/fs/f2fs/file.c
@@ -2042,7 +2042,7 @@ static int f2fs_ioc_getversion(struct file *filp, unsigned long arg)
 	return put_user(inode->i_generation, (int __user *)arg);
 }
 
