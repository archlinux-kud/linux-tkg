diff --git a/fs/f2fs/segment.c b/fs/f2fs/segment.c
index 556558907ea7..d1604460a545 100644
--- a/fs/f2fs/segment.c
+++ b/fs/f2fs/segment.c
@@ -865,7 +865,7 @@ block_t f2fs_get_unusable_blocks(struct f2fs_sb_info *sbi)
 	}
